/* pages/veido/veido.wxss */
.item{
  padding: 0 20px;
  box-sizing: border-box;
}
.item-top>view{
  display: flex;
}

.top-left>image {
  width: 56rpx;
  height:56rpx;
  margin-right: 10rpx;
}
.top-left>view{
  display: flex;
  flex-direction: column;
}
.nick , .time{
  font-size: 24rpx;

}
.item-content{
  display: flex;
  flex-direction: column;
}
.item-content>text{
  margin:10rpx 0;
}
.item-content>video{
  align-self: center;
}

.item-bottom{
  margin-top:15rpx;
  display: flex;
  justify-content: space-around;
}
.item-bottom view{
  position: relative;
  width: calc(100%/4);
  text-align: center;
}
.item-bottom image{
  width: 40rpx;
  height: 40rpx;
  vertical-align:middle;
  margin-right: 8rpx;
}
.item-bottom text{
  color: #333;
  font-size:24rpx;
}
.item-bottom view+view:after{
  content: "";   
  border: solid 1rpx #ccc;
  position: absolute;
  left: -10rpx;
  top:6rpx;
  height: 40rpx;
  
}